local player = game.Players.LocalPlayer
local mouse = player:GetMouse()
local camera = workspace.CurrentCamera

local screenGui = player.PlayerGui:WaitForChild("BaseballUI") 
local imageLabel = screenGui:WaitForChild("Cursor2") 

local targetPart = workspace:WaitForChild("TargetPart") 


local function updatePosition()
    local position = camera:WorldToViewportPoint(targetPart.Position)
    imageLabel.Position = UDim2.new(0, position.X, 0, position.Y)
end

game:GetService("RunService").RenderStepped:Connect(updatePosition)


updatePosition()
